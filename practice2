num = int(input("Enter a number: "))
num1 = (num % 2)

if num > 0:
    if num1 == 1:
        result = "Positive odd number"
    else:
        result = "Positive even number"
elif num < 0:
    result = "Negative number"
else:
    result = "It is zero"
num2 = bool(num)
if num2:
    print(result)
else:
    num = int(input("Enter a number: "))